	@GetMapping("/book/rentalProc")
	public String rentalproc(
			@RequestParam("bookName") String bookName,
			@RequestParam("author") String author,
			@RequestParam("isbn") String isbn,
			@RequestParam("rentalName") String rentalName,
			Model model
			) {
		System.out.println("rentalproc()");
		
		bookList.add(new BookPro(bookName, author, isbn, rentalName));
		
		for(int i = 0; i < bookList.size(); i++) {
			model.addAttribute("bookNames", List.of(bookName));
			model.addAttribute("authors",List.of(author));
			model.addAttribute("isbns",List.of(isbn));
			model.addAttribute("rentalNames",List.of(rentalName));
		}
		
		
		return "rentalSearch";
	}
}

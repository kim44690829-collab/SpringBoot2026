package com.green.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
public class RestaurantControll {

	@GetMapping("/restaurant/booking")
	public String booking() {
		return "restaurantBooking";
	}
	
	@PostMapping("/restaurant/bookingComplete")
	public String bookingComplete(
			@RequestParam("guestName") String guestName,
			@RequestParam("phone") String phone,
			@RequestParam("bookingDate") String bookingDate,
			@RequestParam("bookingTime") String bookingTime,
			@RequestParam("partySize") String partySize
			) {
		
		ModelAndView mav = new ModelAndView();
		
		mav.addObject("guestName", guestName);
		mav.addObject("phone", phone);
		mav.addObject("bookingDate", bookingDate);
		mav.addObject("bookingTime", bookingTime);
		mav.addObject("partySize", partySize);
		
		return "";
	}
}
